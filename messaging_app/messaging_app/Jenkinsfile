pipeline {
    agent any

    environment {
        GIT_CREDENTIALS = 'your-github-credentials-id'  // Replace with your GitHub credentials ID
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout the code from the specified branch
                git branch: 'main', credentialsId: "${GIT_CREDENTIALS}", url: 'https://github.com/yourusername/messaging-app.git'  // Replace 'main' and the URL as needed
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install dependencies using pip3 (ensure the requirements.txt is in messaging_app folder)
                sh 'pip3 install -r messaging_app/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                // Run tests using pytest
                sh 'pytest --maxfail=1 --disable-warnings -q'
            }
        }

        stage('Generate Test Report') {
            steps {
                // Generate a test report in HTML format
                sh 'pytest --maxfail=1 --disable-warnings -q --html=messaging_app/report.html'
                // Archive the test report
                archiveArtifacts artifacts: 'messaging_app/report.html', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            // Clean up workspace after the build
            cleanWs()
        }
    }
}